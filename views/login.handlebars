<form action="/auth/login" method="post">
    <div>
        <label>Email:</label>
        <input type="text" name="username" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" />
    </div>
    <div>
        <input type="submit" value="Log In" />
    </div>

    <a href="/auth/google">Sign In with Google</a>
</form>